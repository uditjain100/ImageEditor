<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:weightSum="3">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/change_layout_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/LightBlue"
            android:drawableTop="@drawable/add_image_dra"
            android:padding="8dp"
            android:text="Change Layout"
            android:textAllCaps="false"
            android:textColor="@color/Blue"
            android:textSize="10dp"
            app:cornerRadius="15dp"
            app:rippleColor="@color/DodgerBlue" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/change_text_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/LightBlue"
            android:drawableTop="@drawable/change_text_dra"
            android:padding="8dp"
            android:text="Change Text"
            android:textAllCaps="false"
            android:textColor="@color/Blue"
            android:textSize="10dp"
            app:cornerRadius="15dp"
            app:rippleColor="@color/DodgerBlue" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_image_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/LightBlue"
            android:drawableTop="@drawable/add_image_02"
            android:padding="8dp"
            android:text="Add Image"
            android:textAllCaps="false"
            android:textColor="@color/Blue"
            android:textSize="10dp"
            app:cornerRadius="15dp"
            app:rippleColor="@color/DodgerBlue" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_margin="10dp"
        android:background="@color/LightGrey"
        android:padding="10dp" />


</RelativeLayout>